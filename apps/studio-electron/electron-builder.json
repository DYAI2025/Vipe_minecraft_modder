{
  "appId": "com.kidmodstudio.app",
  "productName": "KidModStudio",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../../kidmodstudio_exporter_kit/template",
      "to": "templates/fabric",
      "filter": ["**/*"]
    }
  ],
  "linux": {
    "target": ["AppImage", "deb"]
  },
  "mac": {
    "target": ["dmg"]
  },
  "win": {
    "target": ["nsis"]
  }
}
